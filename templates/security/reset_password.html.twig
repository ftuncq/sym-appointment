{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe
{% endblock %}

{% block body %}
	<div class="container pt-5">
		<div class="card card-fill">
			<div class="card-body">
				<div class="my-8 mx-auto" style="width: 480px;" data-controller="reset-password">
					<h1 class="text-center mb-4 fs-4">Réinitialisation du mot de passe</h1>
					{{ form_errors(passForm) }}
					{{ form_start(passForm) }}
					<div class="row">
						<div class="col-12">
                            {{ form_label(passForm.plainPassword) }}
                            {{ form_widget(passForm.plainPassword, {
                            'attr': {
                                'class': 'my-custom-class',
                                'data-reset-password-target': 'password'
                            }
                            }) }}
                            {{ form_errors(passForm.plainPassword) }}
							{% include "partials/_entropy.html.twig" %}
						</div>
					</div>
					<button type="submit" class="btn btn-md btn-dark" disabled data-reset-password-target="submit">
						<span>Réinitialiser le mot de passe</span>
					</button>
					{{ form_end(passForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
